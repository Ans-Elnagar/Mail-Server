<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" onMouseDragged="#dragged" onMousePressed="#pressed" style="-fx-background-color: #77606f; -fx-border-width: 5; -fx-border-color: #ff3300;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eg.edu.alexu.csd.datastructure.mailServer.GUI.AlertController">
   <children>
      <ImageView fitHeight="52.0" fitWidth="53.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../../../../../icons/alert.png" />
         </image>
         <VBox.margin>
            <Insets left="5.0" right="5.0" top="15.0" />
         </VBox.margin>
      </ImageView>
      <Label fx:id="lblMessage" textFill="#fffefe">
         <VBox.margin>
            <Insets bottom="15.0" left="5.0" right="5.0" top="10.0" />
         </VBox.margin>
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font>
      </Label>
      <Button mnemonicParsing="false" onAction="#closeClicked" text="Done">
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
